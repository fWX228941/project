<?xml version="1.0" encoding="utf-8"?>
<!--为selector设置淡入淡出的效果-->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="500"
          android:exitFadeDuration="500">

    <!--点击-->
    <item android:drawable="@drawable/textview_orange_press" android:state_pressed="true"/>
    <!--默认时-->
    <item android:drawable="@drawable/textview_orange_unpress" android:state_pressed="false"/>
</selector>
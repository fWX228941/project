<resources>
    <!--样式文件-->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!--默认横向权重-->
    <!--<item name="android:textStyle">bold</item>-->
    <!--仅仅用于底部栏-->
    <style name="vertical_weight">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/spacing_mini_plus</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/font_main_grey_selector</item>
        <item name="android:textSize">@dimen/font_size_mini</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>

    </style>


    <style name="radio_button_style">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="radio_button_style_01">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">-120dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!-- 白色字体文本框 -->
    <style name="txt_white_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!-- 默认输入框 -->
    <style name="edit_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:textColor">@color/tittle_view_background_white</item>
        <item name="android:textColorHint">@color/grey_hint</item>
    </style>
    <!-- 默认文本框 -->
    <style name="txt_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tittle_view_background_white</item>
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>



    <style name="line_horizontal_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/default_line</item>
    </style>
    <!-- 默认横线（灰） -->
    <style name="line_vertical_default">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/line_grey_mine</item>
    </style>

    <!-- 灰色正常字体文本框 -->
    <style name="txt_grey_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font_grey</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="txt_grey_normal_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/title_activity_register</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--发送验证码的按钮宽度需要固定，因为如果设置为随宽度内容变化，那么会不断变动-->
    <style name="btn_sendCode_style">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:text">@string/btn_send_code</item>
        <item name="android:textColor">@color/grey_hint</item>
        <item name="android:textSize">@dimen/font_size_mini</item>
    </style>
    <!--首页UI标题样式        <item name="android:textColor">@color/tittle_view_background_white</item>  background添加-->
    <style name="txt_default_level_2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_city</item>
        <item name="android:textSize">@dimen/font_size_mini</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/spacing_small_plus</item>
        <item name="android:paddingTop">@dimen/spacing_small_plus</item>
        <item name="android:paddingBottom">@dimen/spacing_small_plus</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="txt_default_level_1">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>
<!--以下测试-->
    <style name="TestTv" parent="MatchWrap">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">我是测试文本</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TestBtn" parent="MatchWrap">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_size_default</item>
        <item name="android:padding">@dimen/spacing_default</item>
        <item name="android:layout_margin">@dimen/spacing_default</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="line_horizontal_default01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#efeff4</item>
    </style>
    <style name="line_horizontal_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="ActionSheetStyleIOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/actionsheet_slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/actionsheet_slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/actionsheet_slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/actionsheet_slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/actionsheet_slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#1E82FF</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--測試使用，二維碼-->
    <style name="AutoWrapTv" parent="AutoWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <!--用于微信登录测试-->
    <style name="NavPage">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!--用于微信登录测试-->
    <style name="MMLineActionButton" parent="@style/MMLineButton">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <!--用于微信登录测试-->
    <style name="MMLineButton" parent="@style/MMButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <!--用于微信登录测试-->
    <style name="MMButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>


</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:background="#efeff4"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.android.haobanyi.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务评价"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"/>
        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp"
            app:srb_fillColor="@color/font_orange"
            app:srb_borderColor="@color/font_orange"
            app:srb_pressedFillColor="@color/font_orange"
            app:srb_pressedBorderColor="@color/font_orange"
            app:srb_starSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价留言"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"/>
        <com.android.haobanyi.view.ClearEditText
            android:id="@+id/edit_feedback"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingLeft="12dp"
            android:background="@drawable/custom_edittext_sharp"
            android:gravity="left"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#333333">
            <requestFocus />
        </com.android.haobanyi.view.ClearEditText>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_send_evaluation"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/id_hint"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/login_edittext_shape"
            android:layout_gravity="center_horizontal"
            android:text="发表评价" />
        <TextView
            android:id="@+id/id_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号码有误"
            android:textSize="12sp"
            android:textColor="#ff3b2f"
            android:paddingLeft="22dp"
            android:visibility="invisible"/>
    </RelativeLayout>


</LinearLayout>
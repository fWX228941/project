<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/footer"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="right|center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="共4个服务,合计：￥9999.00 (含服务费￥100)"
            android:textColor="#333333"
            android:paddingRight="12dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <View style="@style/line_horizontal_default" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去支付"
            android:id="@+id/tv_get_vt"
            android:background="@drawable/grey_textview_style"
            android:gravity="center"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/font_red"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消订单"
            android:id="@+id/tv_get_vr"
            android:background="@drawable/red_textview_style"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginRight="18dp"
            android:layout_marginEnd="18dp"
            android:layout_alignTop="@+id/tv_get_vt"
            android:layout_toLeftOf="@+id/tv_get_vt"
            android:layout_toStartOf="@+id/tv_get_vt"/>
    </RelativeLayout>
    <View style="@style/line_horizontal_default" />
    <!--好办易红包-->

</LinearLayout>
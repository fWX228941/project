<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff4">
    <!--标题栏-->
    <com.android.haobanyi.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/id_pwd_txt"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="代金券密卡："
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="right"/>
        <com.android.haobanyi.view.ClearEditText
            android:id="@+id/edit_password"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/custom_edittext_sharp"
            android:textSize="16sp"
            android:textColor="#333333">
            <requestFocus />
        </com.android.haobanyi.view.ClearEditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="校验码："
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="right"/>
        <com.android.haobanyi.view.ClearEditText
            android:id="@+id/edit_code"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/custom_edittext_sharp"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#333333">
        </com.android.haobanyi.view.ClearEditText>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d1d6db"/>
        <com.android.haobanyi.view.ValidationCodeView
            android:id="@+id/btn_send_code"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            app:CodeTextSize="20sp"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/id_tv_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入已经店铺代金券卡密号码，确认生效后可在购物车使用抵扣订单金额"
        android:textSize="12sp"
        android:textColor="#666666"
        android:paddingTop="5dp"
        android:paddingRight="12dp"
        android:paddingLeft="22dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/id_hint"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:onClick="onClick"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/login_edittext_shape"
            android:layout_gravity="center_horizontal"
            android:text="领取" />
        <TextView
            android:id="@+id/id_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="手机号码有误"
            android:textSize="12sp"
            android:textColor="#ff3b2f"
            android:paddingLeft="22dp"
            android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
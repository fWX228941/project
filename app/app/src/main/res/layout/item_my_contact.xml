<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    android:focusable="true"
    android:clickable="true"
    android:foreground="@drawable/card_foreground"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="12dp"
    card_view:cardUseCompatPadding="true">
    <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/id_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:id="@+id/li_has_contact"
                android:layout_marginRight="12dp"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/content_li_02"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/id_contactname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人：大兵11111111111111111111111"
                        android:textColor="#333333"
                        android:singleLine="true"
                        android:maxWidth="200dp"
                        android:textSize="19sp"/>

                    <TextView
                        android:id="@+id/id_contactmobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17096666666"
                        android:textColor="#333333"
                        android:textSize="19sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/content_li_03"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/id_contactaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地址：广东省深圳市南山区科苑路虚拟大学园R2-A栋北门203cegwagaghahahahreahrtfjdfyhshdjdr"
                        android:textColor="#333333"
                        android:textSize="15sp"/>
                </LinearLayout>
                <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/hint_contact"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="46dp">
                    <RadioButton
                        android:id="@+id/all_radio_button"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:button="@null"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:drawablePadding="5dp"
                        android:checked="false"
                        android:drawableLeft="@drawable/radio_icon_checked"
                        android:text="设置默认地址"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                    <TextView
                        android:id="@+id/id_edit_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编辑"
                        android:textColor="#666666"
                        android:background="#ffffff"
                        android:padding="2dp"
                        android:singleLine="false"
                        android:textSize="15sp"
                        android:layout_marginRight="23dp"
                        android:layout_marginEnd="23dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/id_delete_"
                        android:layout_toStartOf="@+id/id_delete_"/>
                    <TextView
                        android:id="@+id/id_delete_"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:textColor="#666666"
                        android:background="#ffffff"
                        android:singleLine="false"
                        android:textSize="15sp"
                        android:padding="2dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
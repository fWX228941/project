<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/confirm_footer"
              android:visibility="visible"
              android:orientation="vertical"
              android:background="@android:color/white">
    <View style="@style/line_horizontal_default" />
    <!--好办易红包-->
    <RelativeLayout
        android:id="@+id/id_hoabanyi_bonus"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_tv_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="好办易红包：省￥10元"
            android:textColor="#333333"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/id_tv_bonusPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省10元"
            android:visibility="gone"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView53"
            android:layout_toStartOf="@+id/imageView53"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView53"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:visibility="invisible"
            android:src="@drawable/register_bnt_advance"
            android:layout_gravity="center"
            android:layout_alignTop="@+id/id_tv_bonusPrice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>
    <View style="@style/line_horizontal_default" />
    <LinearLayout
        android:id="@+id/id_02_normal_all_state"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:orientation="horizontal"
        android:gravity="center_vertical|right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/id_tv_totalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="共4个，合计"
                    android:textColor="#666666"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/id_tv_totalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginLeft="18dp"
                    android:text="￥999999.00"
                    android:textColor="#ff3b2f"
                    android:textSize="19sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvPostPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="优惠￥99"
                android:textColor="#ff3b2f"
                android:textSize="10sp"/>

        </LinearLayout>
        <!--提交订单-->
        <TextView
            android:id="@+id/id_submit_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff3b2f"
            android:gravity="center_vertical"
            android:layout_gravity="right"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp"
            android:text="提交订单"
            android:textColor="#ffffff"
            android:textSize="19sp"/>
    </LinearLayout>
</LinearLayout>

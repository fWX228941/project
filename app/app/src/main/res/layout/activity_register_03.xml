<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efeff4">
    <!--标题栏-->
    <com.android.haobanyi.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/id_textView_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="好办易，恭喜你注册成功！"
        android:textSize="16sp"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_marginTop="28dp"/>
    <TextView
        android:id="@+id/id_textView_tip_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录名：15527221406！"
        android:textSize="15sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="29dp"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/id_hint"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="23dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="6dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_btn_pressed_01"
            android:layout_gravity="center_horizontal"
            android:text="马上登陆吧" />

</LinearLayout>
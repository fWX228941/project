<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#efeff4">
    <!--好办易红包-->
    <RelativeLayout
        android:id="@+id/id_address"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:id="@+id/li_has_contact"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/content_li_02"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--to right of  就是从右边算起了-->
                <TextView
                    android:id="@+id/id_contactname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系人：大兵"
                    android:singleLine="true"
                    android:maxWidth="200dp"
                    android:textColor="#333333"
                    android:textSize="19sp"/>

                <TextView
                    android:id="@+id/id_contactmobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17096666666"
                    android:textColor="#333333"
                    android:textSize="19sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content_li_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/id_contactaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="地址：广东省深圳市南山区科苑路虚拟大学园R2-A栋北门203"
                android:textColor="#333333"
                android:textSize="15sp"/>
        </LinearLayout>
        </LinearLayout>






        <LinearLayout
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:id="@+id/li_has_no_contact"
            android:layout_marginRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/content_li_02"
            android:visibility="gone"
            android:gravity="center"

            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_text_blank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您的收货地址为空，点此添加收货地址"
                android:textColor="#666666"
                android:gravity="center_vertical"
                android:singleLine="false"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/content_li_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView03"
            android:src="@drawable/register_bnt_advance"/>
        </LinearLayout>
    </RelativeLayout>


    <View style="@style/line_horizontal_default" />
    <!--好办易红包-->
    <RelativeLayout
        android:id="@+id/id_hoabanyi_receipt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/id_tv_receipt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="发票信息：不需要发票"
            android:textColor="#666666"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView53"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/register_bnt_advance"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</LinearLayout>
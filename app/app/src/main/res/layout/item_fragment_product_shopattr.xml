        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/bg_btn_normal_01"
        android:singleLine="false"
        />

</LinearLayout>
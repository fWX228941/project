            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/security_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="安全消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_fund_message"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fund_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="资金消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
<LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.android.haobanyi.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View style="@style/line_horizontal_default01"
          android:layout_height="1dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_order_message"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/order_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="订单消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_refund_message"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/refund_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="退款消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#333333"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:id="@+id/textView10"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_complaint_message"

        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/complaint_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="投诉消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_inform_offense_message"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/inform_offense_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="举报消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/id_merchants_setted_message"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--左边的图片全面缩放10dp 这个高宽比是需要自己来自定义一个，来匹配不同的屏幕-->
            <!--SixteenToTenImageView-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/merchants_setted_message"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <TextView
                android:text="商家入驻消息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_security_message"
        android:layout_gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:foreground="@drawable/card_foreground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardElevation="1dp"
        card_view:contentPadding="10dp"
        card_view:cardUseCompatPadding="true">
        <!--cardView 属性：http://www.68idc.cn/help/mobilesys/android/20150116173778.html-->
        <LinearLayout
            android:layout_width="match_parent"

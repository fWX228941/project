<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_l2_normal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_rl_child"
        android:background="@color/white">
        <ImageView
            android:id="@+id/id_iv_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:padding="10dp"
            android:paddingLeft="12dp"
            android:src="@mipmap/ic_launcher"
            />
        <LinearLayout
            android:id="@+id/id_ll_normal"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/id_iv_logo"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:id="@+id/tv_items_child"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#666666"
                    android:text="商品名称"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/id_tv_discount_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:singleLine="true"
                    android:text="￥100"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:id="@+id/tv_items_child_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:textColor="#999999"
                    android:textSize="12dp"
                    android:text="服务：公司注册 商标注册"
                    >
                </TextView>

                <TextView
                    android:id="@+id/id_tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:text="@string/product_count"
                    android:textColor="#666666"
                    android:textSize="12dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <!--默认就是gone 只有在最后一个才是visible-->
    <LinearLayout
                  android:id="@+id/id_last_visiable"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:visibility="visible">
        <View style="@style/line_horizontal_default"
              android:visibility="visible"
              android:id="@+id/id_sales_promotion_01"/>
        <RelativeLayout
            android:id="@+id/id_sales_promotion"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_sales_promotion_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠活动:满1000元减30元"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/id_tv_sales_promotion_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                android:text="省30元"
                android:textColor="#999999"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <View style="@style/line_horizontal_default"
              android:visibility="visible"
              android:id="@+id/id_hoabanyi_coupon_01"/>
        <!--代金券-->
        <RelativeLayout
            android:id="@+id/id_hoabanyi_coupon"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="代金券:￥100元"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_tv_bonusPric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省100元"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/product_img"
                android:layout_toStartOf="@+id/product_img"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_img"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/register_bnt_advance"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/id_tv_bonusPric"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <View style="@style/line_horizontal_default"
            android:visibility="gone"/>
        <!--好办易红包-->
        <RelativeLayout
            android:id="@+id/id_hoabanyi_bonus"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_bonus01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="店铺红包:￥10元"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/id_tv_bonusPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省10元"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/imageView01"
                android:layout_toStartOf="@+id/imageView01"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView01"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/register_bnt_advance"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/id_tv_bonusPrice"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
        <View style="@style/line_horizontal_default" />
        <!--卖家留言-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买家留言："
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:textSize="12sp"/>
            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="可填写需求"
                android:background="@drawable/custom_edittext_sharp"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="#333333">
         </EditText>
        </LinearLayout>
        <View style="@style/line_horizontal_default" />
        <!--好办易红包-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="right|center_vertical"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/id_tv_totalCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="共4个服务"
                android:textColor="#333333"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/id_tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:text="合计："
                android:textColor="#333333"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/id_tv_totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="￥999999.00"
                android:textColor="#ff3b2f"
                android:textSize="19sp"/>
        </LinearLayout>
        <View style="@style/line_horizontal_default"
              android:layout_height="12dp"
              android:background="#efeff4"/>
    </LinearLayout>
</LinearLayout>
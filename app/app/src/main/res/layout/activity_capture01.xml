<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                 style="@style/MatchMatch">


<cn.bingoogolapple.qrcode.zxing.ZXingView
    android:id="@+id/zxingview"
    style="@style/MatchMatch"
    app:qrcv_animTime="1000"
    app:qrcv_barCodeTipText="将条码放入框内，即可自动扫描登录"
    app:qrcv_barcodeRectHeight="140dp"
    app:qrcv_borderColor="@android:color/white"
    app:qrcv_borderSize="1dp"
    app:qrcv_cornerColor="@color/colorPrimaryDarkTrans"
    app:qrcv_cornerLength="20dp"
    app:qrcv_cornerSize="3dp"
    app:qrcv_isBarcode="false"
    app:qrcv_isOnlyDecodeScanBoxArea="true"
    app:qrcv_isScanLineReverse="true"
    app:qrcv_isShowDefaultGridScanLineDrawable="true"
    app:qrcv_isShowDefaultScanLineDrawable="false"
    app:qrcv_isShowTipBackground="true"
    app:qrcv_isShowTipTextAsSingleLine="false"
    app:qrcv_isTipTextBelowRect="false"
    app:qrcv_maskColor="#33FFFFFF"
    app:qrcv_qrCodeTipText="对准桌面二维码到识别框内，即可自动扫描登录"
    app:qrcv_rectWidth="200dp"
    app:qrcv_scanLineColor="@color/colorPrimaryDarkTrans"
    app:qrcv_scanLineMargin="0dp"
    app:qrcv_scanLineSize="1dp"
    app:qrcv_tipTextColor="@android:color/white"
    app:qrcv_tipTextSize="12sp"
    app:qrcv_toolbarHeight="56dp"
    app:qrcv_topOffset="90dp" />


    <TextView
        android:id="@+id/back"
        android:layout_height="wrap_content"
        android:text="返回"
        android:drawableTop="@drawable/back_arrow"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:drawablePadding="5dp"
        android:textColor="#f57257"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:id="@+id/choose_qrcde_from_gallery"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="从相册选取扫描"
        android:drawableTop="@drawable/scan_imag"
        android:layout_width="wrap_content"
        android:drawablePadding="5dp"
        android:textColor="#f57257"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/close_flashlight"
        android:layout_height="wrap_content"
        android:text="关闭闪光灯"
        android:drawableTop="@drawable/linght"
        android:layout_width="wrap_content"
        android:drawablePadding="5dp"
        android:textColor="#f57257"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/open_flashlight"
        android:layout_height="wrap_content"
        android:text="打开闪光灯"
        android:drawableTop="@drawable/linght"
        android:layout_width="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:drawablePadding="5dp"
        android:textColor="#f57257"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>






</RelativeLayout>